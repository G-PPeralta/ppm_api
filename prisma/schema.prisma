generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tarefa {
  id                  Int     @id @default(autoincrement())
  area                String  @db.VarChar
  tarefa              String  @db.VarChar
  precedentes_diretos String? @db.VarChar
  fase                String  @db.VarChar
  duracao_planejada   String? @db.VarChar

  @@map("tb_tarefas")
}

model User {
  id           Int     @id @default(autoincrement())
  nome         String  @db.VarChar
  email        String  @unique @db.VarChar
  senha        String  @db.VarChar
  telefone     String  @db.VarChar
  area_atuacao String  @db.VarChar
  avatar       String? @db.VarChar
  role_id      Int
  tb_role      tb_role @relation("tb_roleTotb_usuarios", fields: [role_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "role_id_fk")

  @@map("tb_usuarios")
}

model tb_role {
  id          Int    @id @default(autoincrement())
  role        String @db.VarChar
  tb_usuarios User[] @relation("tb_roleTotb_usuarios")
}
