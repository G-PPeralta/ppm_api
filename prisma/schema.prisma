generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tarefa {
  id                  Int     @id @default(autoincrement())
  area                String  @db.VarChar
  tarefa              String  @db.VarChar
  precedentes_diretos String? @db.VarChar
  fase                String  @db.VarChar
  duracao_planejada   String? @db.VarChar

  @@map("tb_tarefas")
}

model User {
  id           Int    @id @default(autoincrement())
  nome         String @db.VarChar
  email        String @unique @db.VarChar
  senha        String @db.VarChar
  telefone     String @db.VarChar
  area_atuacao String @db.VarChar
  role_id      Int    @default(2)
  tb_role      Role   @relation("tb_roleTotb_usuarios", fields: [role_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "role_id_fk")

  @@map("tb_usuarios")
}

model Role {
  id          Int    @id @default(autoincrement())
  role        String @db.VarChar
  nome_role   String @db.VarChar(50)
  tb_usuarios User[] @relation("tb_roleTotb_usuarios")

  @@map("tb_role")
}

model Log {
  id   Int      @id @default(autoincrement())
  log  Json     @db.Json
  data DateTime @default(now()) @db.Timestamp(6)

  @@map("tb_logs")
}
